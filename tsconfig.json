{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "typeRoots": ["src/types", "node_modules/@types"]
  },
  "include": ["src/**/*.ts", "src/types/**/*.d.ts"]
}
